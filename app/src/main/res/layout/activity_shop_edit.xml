<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="406dp"
            android:layout_height="160dp"
            android:elevation="24dp" android:scrollbarThumbHorizontal="@color/purple_500"
            app:cardBackgroundColor="#FFC107"
            app:cardCornerRadius="80dp" app:contentPadding="5dp" android:rotationX="2" android:background="#000000"
            android:backgroundTint="#C5FF0000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" android:backgroundTint="#623A2424" android:background="#00FFFFFF"
        >


            <TextView
                    android:id="@+id/genre"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:textAlignment="viewStart"
                    tools:text="Genre"
                    app:layout_constraintEnd_toStartOf="@+id/game_quantity"
                    android:layout_marginEnd="200dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="60dp" android:textColor="#000000" android:textFontWeight="20"
                    android:textStyle="bold" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="55dp"/>
            <TextView
                    android:id="@+id/gameEditPrice"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:textAlignment="viewStart"
                    tools:text="price"
                    app:layout_constraintEnd_toStartOf="@+id/game_quantity"
                    android:layout_marginEnd="148dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="76dp" android:textColor="#000000" android:textFontWeight="20"
                    android:textStyle="bold" android:layout_marginStart="2dp"
                    app:layout_constraintStart_toEndOf="@+id/genre" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp"/>
            <TextView
                    android:id="@+id/shopTitle"
                    android:layout_width="208dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="viewStart"
                    android:textSize="30sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="A Title" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
                    android:textColor="#000000" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/gameCount"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:textAlignment="viewStart"
                    tools:text="Count:"
                    app:layout_constraintEnd_toStartOf="@+id/game_quantity"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp" android:textColor="#000000" android:textFontWeight="20"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/game_quantity"
                    android:layout_width="76dp"
                    android:layout_height="75dp"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="15" android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp" android:textSize="60sp" android:textColor="#000000"
                    android:textStyle="bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>