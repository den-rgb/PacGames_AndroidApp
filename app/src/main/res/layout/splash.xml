<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center" android:background="#000000">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="267dp"
            android:layout_height="295dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:alpha="1"
            android:adjustViewBounds="true"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:transitionName="logo_transition"
            android:layoutAnimation="@android:anim/bounce_interpolator" app:tint="@android:color/holo_orange_light"
            android:background="#000000" android:backgroundTint="#CE0E0E" android:backgroundTintMode="multiply"
            android:foregroundTint="#FF0404"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="71dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="73dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ProgressBar
            android:id="@+id/spinner2"
            android:layout_width="77dp"
            android:layout_height="83dp"
            android:indeterminate="true"
            android:layout_gravity="center_horizontal" android:forceDarkAllowed="false"
            android:theme="@style/Theme.PacGamesAndroid" android:progressBackgroundTint="#FF0000"
            android:outlineSpotShadowColor="#FF0000" android:outlineAmbientShadowColor="#FF0000"
            android:indeterminateTint="#FFCD06" android:background="#00FFFFFF" android:paddingLeft="30dp"
            android:paddingTop="25dp" android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="@+id/logo"
            android:layout_marginTop="78dp"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            android:layout_marginBottom="134dp"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="@+id/logo"
            android:layout_marginStart="45dp"/>
    <TextView
            android:layout_width="154dp"
            android:layout_height="76dp" android:id="@+id/textView12"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            android:layout_marginBottom="71dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="@+id/logo"
            android:layout_marginStart="179dp"/>
    <TextView
            android:layout_width="153dp"
            android:layout_height="43dp" android:id="@+id/textView13"
            android:background="#000000" android:rotation="-40"
            app:layout_constraintTop_toTopOf="@+id/logo" android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="@+id/logo" android:layout_marginStart="140dp"
            app:layout_constraintBottom_toBottomOf="@+id/logo" android:layout_marginBottom="164dp"/>
    <TextView
            android:layout_width="153dp"
            android:layout_height="43dp" android:id="@+id/textView14"
            android:background="#000000" app:layout_constraintStart_toStartOf="@+id/logo"
            android:layout_marginStart="194dp" app:layout_constraintBottom_toBottomOf="@+id/logo"
            android:layout_marginBottom="147dp" app:layout_constraintTop_toTopOf="@+id/textView13"
            android:layout_marginTop="17dp"/>
    <TextView
            android:layout_width="82dp"
            android:layout_height="18dp" android:id="@+id/textView15"
            android:background="#FFC107" android:rotation="-40"
            app:layout_constraintBottom_toBottomOf="@+id/logo" android:layout_marginBottom="172dp"
            app:layout_constraintStart_toStartOf="@+id/logo" android:layout_marginStart="129dp"
            app:layout_constraintTop_toTopOf="@+id/logo" android:layout_marginTop="105dp"/>
    <TextView
            android:layout_width="103dp"
            android:layout_height="20dp" android:id="@+id/textView17"
            android:background="#FFC107" android:rotation="50"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            android:layout_marginBottom="114dp" app:layout_constraintTop_toTopOf="@+id/logo"
            android:layout_marginTop="161dp" app:layout_constraintStart_toStartOf="@+id/logo"
            android:layout_marginStart="115dp"/>
    <TextView
            android:text="Pac Games"
            android:layout_width="412dp"
            android:layout_height="91dp" android:id="@+id/textView18"
            android:textColor="#FFC107"
            android:fontFamily="@font/architects_daughter" android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="124dp"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>

