<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp" android:scrollbarThumbHorizontal="@color/purple_500" app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="80dp" app:contentPadding="5dp" android:rotationX="2" android:background="#000000"
        android:backgroundTint="#C5402833">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" android:backgroundTint="#623A2424" android:background="#00FFFFFF">


        <TextView
                android:id="@+id/shopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="A Title" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
                android:textColor="#FF0000"/>
        <TextView
                android:id="@+id/shopLocation"
                android:layout_width="159dp"
                android:layout_height="20dp"
                android:textAlignment="viewStart"
                tools:text="Location"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/shopTitle" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="50dp" android:textColor="#FF0000"/>
        <TextView
                android:id="@+id/gameCount"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:textAlignment="viewStart"
                tools:text="Games:"
                app:layout_constraintEnd_toStartOf="@+id/game_quantity"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp" android:textColor="#FA0000" android:textFontWeight="20"/>
        <TextView
                android:id="@+id/game_quantity"
                android:layout_width="76dp"
                android:layout_height="75dp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="15" android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp" android:textSize="60sp" android:textColor="#FF0000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" android:background="#003E2424"/>
</androidx.cardview.widget.CardView>