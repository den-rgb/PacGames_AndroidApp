<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp" android:scrollbarThumbHorizontal="@color/purple_500" app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="80dp" app:contentPadding="5dp" android:rotationX="2">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


        <TextView
                android:id="@+id/shopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="A Title" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
        <TextView
                android:id="@+id/shopLocation"
                android:layout_width="159dp"
                android:layout_height="20dp"
                android:layout_marginTop="28dp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shopTitle"
                tools:text="Location" android:layout_marginEnd="180dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="46dp"/>
        <TextView
                android:id="@+id/game_quantity"
                android:layout_width="86dp"
                android:layout_height="94dp"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="15" android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp" android:textSize="60sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>